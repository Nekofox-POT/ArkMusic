import { webview } from '@kit.ArkWeb';

//////////////////
// 导入自创建模块 //
/////////////////

///////////
// 变量池 //
//////////

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// 主页面入口 //
//////////////
@Entry
@Component
struct Index {
  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

  ///////////
  // 变量池 //
  //////////
  taskbar_ui: webview.WebviewController = new webview.WebviewController();

  ///////////
  // 更新池 //
  //////////

  //////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  // UI构建 //
  ///////////
  build() {
    Row() {

    ///////////
    // 导航栏 //
    //////////
    Web({ src: $rawfile("webview_gui/taskbar/index.html"), controller: this.taskbar_ui })
      .width('100vw')
      .height('100vh')
      .zIndex(900)
      .zoomAccess(false)
    }

  }
}
